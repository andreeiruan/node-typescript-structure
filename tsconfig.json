{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@entities/*": [
        "./src/entities/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@helpers/*": [
        "./src/helpers/*"
      ],
      "@providers/*": [
        "./src/providers/*"
      ],
      "@repositories/*": [
        "./src/repositories/*"
      ],
      "@useCases/*": [
        "./src/useCases/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ]
}